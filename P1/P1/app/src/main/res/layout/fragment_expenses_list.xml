<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lfo.p1.ExpenseListFragment"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <Button
        android:id="@+id/btnExpensesListChooseDates"
        android:layout_width="156dp"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/choose_dates"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAddExpense"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_conversion_absoluteHeight="60dp"
        tools:layout_conversion_absoluteWidth="384dp"
        tools:layout_conversion_absoluteX="0dp"
        tools:layout_conversion_absoluteY="451dp" />

    <TextView
        android:id="@+id/tvTitleExpense"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:foregroundGravity="top"
        android:gravity="top"
        android:text="@string/expenses"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_conversion_absoluteHeight="28dp"
        tools:layout_conversion_absoluteWidth="384dp"
        tools:layout_conversion_absoluteX="0dp"
        tools:layout_conversion_absoluteY="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="57dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/tvDateTo"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tvUser"
        android:layout_width="140dp"
        android:layout_height="27dp"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="32dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tvTitleExpense"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foregroundGravity="bottom|center_horizontal"
        android:gravity="bottom"
        android:padding="5dp"
        android:text="Price"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:layout_conversion_absoluteHeight="26dp"
        tools:layout_conversion_absoluteWidth="361dp"
        tools:layout_conversion_absoluteX="12dp"
        tools:layout_conversion_absoluteY="0dp"
        android:layout_marginRight="27dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="7dp"
        app:layout_constraintBottom_toTopOf="@+id/lvExpenseTransactions" />

    <TextView
        android:id="@+id/tvCategory"
        android:layout_width="71dp"
        android:layout_height="25dp"
        android:foregroundGravity="bottom|center_horizontal"
        android:gravity="bottom"
        android:padding="5dp"
        android:text="Category"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:layout_conversion_absoluteHeight="26dp"
        tools:layout_conversion_absoluteWidth="361dp"
        tools:layout_conversion_absoluteX="12dp"
        tools:layout_conversion_absoluteY="0dp"
        app:layout_constraintRight_toLeftOf="@+id/tvPrice"
        android:layout_marginRight="38dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/lvExpenseTransactions"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tvUser"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foregroundGravity="bottom|center_horizontal"
        android:gravity="bottom"
        android:padding="5dp"
        android:text="Title"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:layout_conversion_absoluteHeight="26dp"
        tools:layout_conversion_absoluteWidth="361dp"
        tools:layout_conversion_absoluteX="12dp"
        tools:layout_conversion_absoluteY="0dp"
        app:layout_constraintRight_toLeftOf="@+id/tvCategory"
        android:layout_marginRight="55dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleExpense"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/lvExpenseTransactions" />

    <TextView
        android:id="@+id/tvDateTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foregroundGravity="bottom|center_horizontal"
        android:gravity="bottom"
        android:padding="5dp"
        android:text="Date"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:layout_conversion_absoluteHeight="26dp"
        tools:layout_conversion_absoluteWidth="361dp"
        tools:layout_conversion_absoluteX="12dp"
        tools:layout_conversion_absoluteY="0dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tvTitle"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.436"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/lvExpenseTransactions" />

    <Button
        android:id="@+id/btnAddExpense"
        android:layout_width="0dp"
        android:layout_height="57dp"
        android:text="ADD EXPENSE"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/btnBackToMenu"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ListView
        android:id="@+id/lvExpenseTransactions"
        android:layout_width="354dp"
        android:layout_height="308dp"
        tools:layout_conversion_absoluteHeight="408dp"
        tools:layout_conversion_absoluteWidth="384dp"
        tools:layout_conversion_absoluteX="0dp"
        tools:layout_conversion_absoluteY="51dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/btnAddExpense" />

    <Button
        android:id="@+id/btnBackToMenu"
        android:layout_width="158dp"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="Back To Menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.117"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btnDates" />

</android.support.constraint.ConstraintLayout>

