<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvTransactionDate"
        android:layout_width="138dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvTransactionTitle"
        android:layout_width="138dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tvTransactionDate"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvTransactionCategory"
        android:layout_width="138dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tvTransactionTitle"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvTransactionAmount"
        android:layout_width="138dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tvTransactionCategory"
        android:textSize="16sp" />

</RelativeLayout>