<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lfo.p1.ExpenseListFragment"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/tvTitleIncome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:foregroundGravity="top"
        android:gravity="top"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_conversion_absoluteHeight="28dp"
        tools:layout_conversion_absoluteWidth="384dp"
        tools:layout_conversion_absoluteX="0dp"
        tools:layout_conversion_absoluteY="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.49" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_marginBottom="7dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:foregroundGravity="bottom|center_horizontal"
        android:gravity="bottom"
        android:padding="5dp"
        android:text="Date"
        android:textAlignment="viewStart"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/lvIncomeTransactions"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_conversion_absoluteHeight="26dp"
        tools:layout_conversion_absoluteWidth="361dp"
        tools:layout_conversion_absoluteX="12dp"
        tools:layout_conversion_absoluteY="0dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="72dp"
        android:layout_height="26dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="82dp"
        android:foregroundGravity="bottom|center_horizontal"
        android:gravity="bottom"
        android:padding="5dp"
        android:text="Title"
        android:textAlignment="viewStart"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:layout_conversion_absoluteHeight="26dp"
        tools:layout_conversion_absoluteWidth="361dp"
        tools:layout_conversion_absoluteX="12dp"
        tools:layout_conversion_absoluteY="0dp"
        app:layout_constraintLeft_toRightOf="@+id/textView"
        android:layout_marginLeft="0dp"
        app:layout_constraintRight_toLeftOf="@+id/textView3"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginBottom="6dp"
        app:layout_constraintBottom_toTopOf="@+id/lvIncomeTransactions"
        tools:layout_editor_absoluteY="66dp"
        tools:layout_editor_absoluteX="124dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="84dp"
        android:layout_height="26dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="172dp"
        android:foregroundGravity="bottom|center_horizontal"
        android:gravity="bottom"
        android:padding="5dp"
        android:text="Category"
        android:textAlignment="viewStart"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:layout_conversion_absoluteHeight="26dp"
        tools:layout_conversion_absoluteWidth="361dp"
        tools:layout_conversion_absoluteX="12dp"
        tools:layout_conversion_absoluteY="0dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toTopOf="@+id/lvIncomeTransactions"
        app:layout_constraintRight_toLeftOf="@+id/tvPrice"
        android:layout_marginRight="8dp"
        tools:layout_editor_absoluteY="67dp"
        tools:layout_editor_absoluteX="204dp" />

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="64dp"
        android:layout_height="26dp"
        android:foregroundGravity="bottom|center_horizontal"
        android:gravity="bottom"
        android:padding="5dp"
        android:text="Amount"
        android:textAlignment="viewStart"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:layout_conversion_absoluteHeight="26dp"
        tools:layout_conversion_absoluteWidth="361dp"
        tools:layout_conversion_absoluteX="12dp"
        tools:layout_conversion_absoluteY="0dp"
        android:layout_marginStart="307dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toTopOf="@+id/lvIncomeTransactions"
        tools:layout_editor_absoluteY="67dp" />

    <ListView
        android:id="@+id/lvIncomeTransactions"
        android:layout_width="356dp"
        android:layout_height="347dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="56dp"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toTopOf="@+id/btnAddIncome"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_conversion_absoluteHeight="408dp"
        tools:layout_conversion_absoluteWidth="384dp"
        tools:layout_conversion_absoluteX="0dp"
        tools:layout_conversion_absoluteY="51dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/btnAddIncome"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/add_income"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>

